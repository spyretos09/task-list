<div class="row mt-5">
    <div class="col-6 offset-3">
        <form action="/login" method="post">
            <h2 class="text-center">Είσοδος</h2>
            <div class="form-group">
                <div>
                    <input type="text" class="form-control" name="username" placeholder="Όνομα χρήστη"
                        required="required" autofocus>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <input type="password" class="form-control" name="password" placeholder="Κωδικός πρόσβασης"
                        required="required">
                </div>
            </div>
            {{#if message}}
                <div class="alert alert-primary" role="alert">
                    {{message}}
                </div>
            {{/if}}
            <div class="form-group">
                <button type="submit" class="btn btn-primary login-btn btn-block">Είσοδος</button>
            </div>
            {{!-- <div class="form-group text-center">
                <a href="#" class="pull-right">Επαναφορά κωδικού</a>
            </div> --}}
        </form>
        <p class="text-center text-muted small"><a href="/register">Δημιουργία νέου λογαριασμού</a></p>
    </div>
</div>
